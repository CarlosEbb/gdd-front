---
interface Props {
  modalId: string
  title: string
}

const { modalId, title } = Astro.props
---

<dialog id={modalId} class="modal-dialog">
  <div class="modal-content">
    <header class="modal-header">
      <h2 class="modal-title">{title}</h2>

      <form method="dialog">
        <button class="modal-close-btn" aria-label="Cerrar ventana modal">&times;</button>
      </form>
    </header>

    <div class="modal-body">
      <slot />
    </div>
  </div>
</dialog>

<script>
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement

    const closeButton = target.closest('[data-close-modal]')
    if (closeButton) {
      const modal = closeButton.closest('dialog')
      if (modal) {
        modal.close()
      }
      return
    }

    if (target instanceof HTMLDialogElement && target.classList.contains('modal-dialog')) {
      target.close()
    }
  })
</script>

<style>
  dialog.modal-dialog {
    border: none;
    padding: 0;
    border-radius: 8px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    max-width: 500px;
    width: 90vw;
    margin: 0;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-height: 90vh;
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.9);
    transition:
      opacity 0.2s ease,
      transform 0.2s ease;
  }

  dialog.modal-dialog::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(3px);
    opacity: 0;
    transition:
      opacity 0.2s ease,
      backdrop-filter 0.2s ease;
  }

  dialog.modal-dialog[open] {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1); /* Estado abierto */
  }

  dialog.modal-dialog[open]::backdrop {
    opacity: 1;
  }

  /* Estilos para el contenido interno */
  .modal-content {
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #eee;
  }

  .modal-title {
    margin: 0;
    font-size: 1.25rem;
  }

  .modal-close-btn {
    background: none;
    border: none;
    font-size: 2rem;
    line-height: 1;
    padding: 0;
    cursor: pointer;
    color: #888;
  }
  .modal-close-btn:hover {
    color: #000;
  }

  .modal-body {
    padding: 1rem 1.5rem 1.5rem;
    overflow-y: auto;
  }
</style>
