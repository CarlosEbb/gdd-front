---
interface Props {
  number?: number | null
}

const { number = 4 } = Astro.props

const documents = Array.from({ length: number ?? 0 }, (_, index) => index)
---

{
  documents.map((document) => (
    <div class="animate-pulse">
      <div class="block rounded-xl border border-gray-200 bg-white p-3">
        <div class="mb-3 flex items-center space-x-2">
          <div class="h-4 w-4 rounded bg-gray-200" />
          <div class="h-4 w-3/4 rounded bg-gray-200" />
        </div>

        <div class="h-32 w-full rounded-lg bg-gray-200" />

        <div class="mt-3 flex items-center space-x-2">
          <div class="h-6 w-6 rounded-full bg-gray-200" />
          <div class="h-3 w-24 rounded bg-gray-200" />
        </div>
      </div>
    </div>
  ))
}
