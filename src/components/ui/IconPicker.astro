  Info,
  CircleQuestionMark,
  TriangleAlert,
  Check,
  CircleCheck,
  X,
  CircleX,
  Plus,
  Minus,
  CirclePlus,
  CircleMinus,
  ArrowRight,
  ArrowLeft,
  ArrowUp,
  ArrowDown,
  ChevronRight,
  ChevronLeft,
  ChevronUp,
  ChevronDown,
  Menu,
  MoveHorizontal,
  MoveVertical,
  Pencil,
  Trash,
  Copy,
  File,
  Folder,
  Image,
  Video,
  Music,
