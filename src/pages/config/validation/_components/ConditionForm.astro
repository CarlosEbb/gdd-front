---
import Input from '@/components/form/Input.astro'
import Select from '@/components/form/Select.astro'
import Button from '@/components/ui/Button.astro'
import Icon from '@/components/ui/Icon.astro'
import EmptyState from '@/components/ui/EmptyState.astro'
import { OPERATORS, OPERATORS_LOGICAL } from '../_constants'
---

<div class="flex flex-col justify-between rounded-lg border border-gray-200 bg-white p-4">
  <div class="mb-4 border-b border-gray-200 pb-4">
    <h2 class="text-lg font-medium text-gray-700">
      <span class="inline-flex size-7 items-center justify-center rounded-lg border-2 border-white bg-custom-blue3 p-2 text-base text-white shadow-sm"> 2 </span>
      Nueva condición
    </h2>
  </div>

  <div class="flex flex-1 items-center justify-center" data-empty-state-paso2>
    <EmptyState title="Sin campos seleccionados" description="Selecciona campos en el paso 1 y presiona 'Crear validación' para comenzar" state="info" hiddenAction={true} />
  </div>

  <div class="hidden flex-1" data-form-container>
    <div class="flex h-full flex-col">
      <form class="flex flex-1 flex-col space-y-4">
        <div data-logical-operators class="hidden w-full">
          <label for="field" class="block">Operadores lógicos</label>
          <div class="grid grid-cols-2 gap-2">
            {
              OPERATORS_LOGICAL.map((operator) => (
                <label class="flex cursor-pointer justify-between rounded-lg border border-gray-200 p-2 transition-all duration-200 hover:border-custom-blue3 hover:bg-custom-blue3/10 hover:text-custom-blue3 has-checked:bg-custom-blue3/10 has-checked:text-custom-blue3 has-checked:ring-custom-blue3">
                  {operator.label}
                  <input type="radio" name="logical-operator" value={operator.value} data-logical-operator-radio class="block accent-custom-blue3 checked:border-indigo-500" />
                </label>
              ))
            }
          </div>
        </div>
        <div class="w-full">
          <label for="field" class="block">Campos a ocultar</label>
          <div class="flex flex-wrap items-center justify-center gap-2 rounded-lg border border-gray-200 bg-gray-50 p-3" data-selected-fields-display>
            <span class="text-sm text-gray-500">No hay campos seleccionados</span>
          </div>
        </div>
        <div class="w-full">
          <label for="field" class="block">Operador de comparación</label>
          <Select name="operator" options={OPERATORS} data-operator-select />
        </div>

        <div class="w-full">
          <label for="field" class="block">Valor</label>
          <Input type="text" name="value" placeholder="Valor" data-value-input />
        </div>
      </form>
      <div class="mt-4 flex justify-end border-t border-gray-200 pt-4">
        <Button variant="secondary" size="sm" data-btn-add-condition>
          <span class="flex items-center gap-2 text-custom-blue3">
            <Icon name="Plus" class="size-4" />
            Agregar validación
          </span>
        </Button>
      </div>
    </div>
  </div>
</div>
