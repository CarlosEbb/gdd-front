---
import '@/styles/global.css'

import gddLogin from '@/assets/images/gdd-img-login.png'
import gddLogo from '@/assets/images/gdd-logo.png'

import { ClientRouter } from 'astro:transitions'

interface Props {
  titleTabBrowser?: string
  titleCardAuth: string
}

const { titleTabBrowser = null, titleCardAuth } = Astro.props
const optionalTitle = titleTabBrowser === null ? 'GDD' : `${titleTabBrowser} | GDD`
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={'@/assets/images/favicon.ico'} />
    <title>{optionalTitle}</title>
    <ClientRouter />
  </head>
  <body class="flex min-h-screen items-center justify-center bg-white from-gray-50 via-blue-50 to-gray-100 md:bg-linear-to-br">
    <div class="flex w-full max-w-none flex-col overflow-hidden bg-transparent md:max-w-xl md:rounded-2xl md:bg-white md:shadow-2xl lg:max-w-5xl lg:flex-row">
      <div class="relative hidden h-64 overflow-hidden lg:block lg:h-auto lg:w-1/2 lg:bg-none">
        <div class="absolute h-full w-full rotate-0 pe-2">
          <img src={gddLogin.src} alt="Decorative gradient" class="h-full w-64 object-fill lg:w-full" />
        </div>
      </div>

      <div class="relative flex flex-1 flex-col overflow-hidden p-8 md:bg-white">
        <header class="flex flex-col items-center">
          <img src={gddLogo.src} transition:animate="initial" alt="GDDLgo" class="max-full aspect-auto object-cover md:min-w-60 lg:min-w-72 xl:min-w-80" />
          <h1 transition:animate="fade" class="mt-3 text-center text-lg font-semibold text-custom-lucky-gray-light md:mt-5">
            {titleCardAuth}
          </h1>
        </header>
        <main transition:animate="fade" class="my-3 md:my-4">
          <slot />
        </main>
        <footer>
          <p class="text-center text-base text-custom-lucky-gray-light">
            <span class="mt-1 block">Â© Made by Soluciones Laser 2025</span>
          </p>
        </footer>
      </div>
    </div>
  </body>
</html>
